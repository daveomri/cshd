  </div>

  <div>
    <%= form.label :artist_id, style: "display: block" %>
    <%= form.number_field :artist_id %>
  </div>

  <div>
    <%= form.label :song_url, style: "display: block" %>
    <%= form.text_field :song_url %>
  </div>

